{
  "name": "chartjs-color",
  "description": "Color conversion and manipulation with CSS string support",
  "license": "MIT",
  "repository": "chartjs/chartjs-color",
  "version": "2.4.1",
  "files": [
    "index.js"
  ],
  "scripts": {
    "pretest": "xo",
    "test": "mocha"
  },
  "dependencies": {
    "chartjs-color-string": "^0.6.0",
    "color-convert": "^1.9.3"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-streamify": "^1.0.2",
    "gulp-uglify": "^3.0.2",
    "mocha": "^6.0.2",
    "vinyl-source-stream": "^2.0.0",
    "xo": "^0.12.1"
  },
  "keywords": [
    "color",
    "colour",
    "css"
  ],
  "authors": [
    "Heather Arthur <fayearthur@gmail.com>",
    "Maxime Thirouin",
    "Josh Junon"
  ],
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "rules": {
      "one-var": [
        2,
        {
          "initialized": "never"
        }
      ],
      "linebreak-style": 0,
      "no-cond-assign": 0,
      "new-cap": 0
    }
  }
}
